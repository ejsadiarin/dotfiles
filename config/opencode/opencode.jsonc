{
    "$schema": "https://opencode.ai/config.json",
    "keybinds": {
        // Remove ctrl+d from app_exit (default is "ctrl+c,ctrl+d,<leader>q")
        // so it can be used for messages_half_page_down instead
        "app_exit": "ctrl+c,<leader>q",
        "session_list": "ctrl+l",
        "messages_half_page_up": "ctrl+u",
        "messages_half_page_down": "ctrl+d",
        "messages_first": "ctrl+g,home",
        "messages_last": "ctrl+alt+g,end"
        // "messages_half_page_up": "ctrl+alt+u",
        // "messages_half_page_down": "ctrl+alt+d"
    },
    // Approval workflow for tool usage
    // Options per tool: "allow", "ask", "deny"
    // Defaults: most tools are "allow", except doom_loop and external_directory which are "ask"
    // Use "*" for global default, then override specific tools
    "permission": {
        "*": "ask",
        "read": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "todoread": "allow",
        "todowrite": "allow"
    },
    // Custom instructions - loaded alongside AGENTS.md
    // Supports: file paths, glob patterns, URLs
    // Note: paths are relative to project root, use ~ for global config paths
    "instructions": [
        "~/.config/opencode/rules/*.md"
    ],
    "agent": {
        "code-reviewer": {
            "description": "Reviews code for best practices and potential issues",
            "mode": "subagent",
            "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
            "tools": {
                "write": false,
                "edit": false
            }
        }
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp"
        },
        "neon": {
            "type": "remote",
            "enabled": true,
            "url": "https://mcp.neon.tech/mcp"
        }
    },
    "plugin": [
        "opencode-antigravity-auth@beta"
    ],
    "provider": {
        "google": {
            "models": {
                "antigravity-gemini-3-pro": {
                    "name": "Gemini 3 Pro (Antigravity)",
                    "limit": {
                        "context": 1048576,
                        "output": 65535
                    },
                    "modalities": {
                        "input": [
                            "text",
                            "image",
                            "pdf"
                        ],
                        "output": [
                            "text"
                        ]
                    },
                    "variants": {
                        "low": {
                            "thinkingLevel": "low"
                        },
                        "high": {
                            "thinkingLevel": "high"
                        }
                    }
                },
                "antigravity-gemini-3-flash": {
